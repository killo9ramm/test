<Window x:Class="RBClientUpdateApplication.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно настроек" Height="438" Width="599" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                <Button Margin="10" Name="button_Ok" IsDefault="True" Width="50" Content="OK" Click="button_Ok_Click" />
                <Button  Name="button_Cancel" Content="Отмена" IsCancel="True" Width="70" Margin="10"/>
            </StackPanel>
            <TextBox TextWrapping="Wrap"    VerticalScrollBarVisibility="Visible"   AcceptsReturn="True" Name="text_Settings"></TextBox>
        </DockPanel>
    </Grid>
</Window>
